{
	"name": "frontend",
	"version": "1.0.0",
	"description": "Frontend for FlexiGPT",
	"type": "module",
	"private": true,
	"scripts": {
		"lint:knip": "knip --tags=-lintignore",
		"lint:eslint": "eslint --env-info && eslint . -c ./eslint.config.mjs",
		"lint": "pnpm run typecheck && pnpm run lint:eslint && pnpm run lint:knip",
		"lint:fix": "eslint . -c ./eslint.config.mjs --fix .",
		"fmt": "prettier -c . --ignore-path ../.prettierignore",
		"fmt:fix": "prettier -w . --ignore-path ../.prettierignore",
		"clean": "rimraf ./dist",
		"run:wailsdev": "cp .env.dev .env && cross-env VITE_PLATFORM=wails react-router dev",
		"build:wails": "rimraf ./dist && cp .env.prod .env && pnpm run typecheck && cross-env VITE_PLATFORM=wails react-router build",
		"typecheck": "react-router typegen && tsc",
		"test": "vitest run",
		"coverage": "vitest run --coverage"
	},
	"keywords": [],
	"author": "ppipada",
	"dependencies": {
		"@ariakit/react": "^0.4.19",
		"@emoji-mart/data": "^1.2.1",
		"@fontsource-variable/inter": "^5.2.8",
		"@platejs/autoformat": "^51.0.0",
		"@platejs/basic-nodes": "^51.0.0",
		"@platejs/basic-styles": "^51.0.0",
		"@platejs/combobox": "^51.0.0",
		"@platejs/emoji": "^51.0.0",
		"@platejs/floating": "^51.0.0",
		"@platejs/indent": "^51.0.0",
		"@platejs/list": "^51.0.0",
		"@platejs/tabbable": "^51.0.0",
		"@react-router/node": "^7.9.6",
		"@udecode/cn": "^49.0.15",
		"class-variance-authority": "^0.7.1",
		"compromise": "^14.14.4",
		"isbot": "^5.1.32",
		"katex": "^0.16.25",
		"mermaid": "^11.12.1",
		"platejs": "^51.0.0",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"react-router": "^7.9.6",
		"react-textarea-autosize": "^8.5.9",
		"rehype-katex": "^7.0.1",
		"rehype-raw": "^7.0.0",
		"rehype-sanitize": "^6.0.0",
		"remark-gemoji": "^8.0.0",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"remark-supersub": "^1.0.0",
		"shiki": "^3.15.0",
		"sprintf-js": "^1.1.3",
		"stopword": "^3.1.5",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@react-router/dev": "^7.9.6",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/node": "22.19.1",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"@types/sprintf-js": "^1.1.4",
		"@types/stopword": "^2.0.3",
		"@vitest/coverage-v8": "^4.0.9",
		"cross-env": "^10.1.0",
		"daisyui": "^5.5.5",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-tailwindcss": "4.0.0-beta.0",
		"globals": "^16.5.0",
		"jiti": "^2.6.1",
		"jsdom": "^27.2.0",
		"knip": "^5.69.1",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"rimraf": "^6.1.0",
		"rollup-plugin-visualizer": "^6.0.5",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"vite": "^7.2.2",
		"vite-plugin-checker": "^0.11.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.9"
	},
	"knip": {
		"entry": [
			"vite.config.{js,cjs,mjs,ts}",
			"react-router.config.{js,cjs,mjs,ts}",
			"app/hooks/highlight_worker.ts"
		],
		"ignore": [
			"app/apis/wailsjs/runtime/runtime.js",
			"app/apis/wailsjs/go/main/App.js",
			"app/apis/wailsjs/go/main/ConversationCollectionWrapper.js",
			"app/apis/wailsjs/go/main/ProviderSetWrapper.js",
			"app/apis/wailsjs/go/main/SettingStoreWrapper.js",
			"app/apis/wailsjs/go/main/ModelPresetStoreWrapper.js",
			"app/apis/wailsjs/go/main/PromptTemplateStoreWrapper.js",
			"app/apis/wailsjs/go/main/ToolStoreWrapper.js",
			"app/hooks/use_mounted.tsx",
			"app/chats/chat_input_textarea.tsx",
			"app/components/editor/nodes/fixed_toolbar.tsx",
			"app/components/editor/nodes/toolbar.tsx",
			"app/chats/attachments/tool_plus_input.tsx",
			"app/chats/templates/template_slash_input.tsx",
			"app/components/editor/nodes/slash_node.tsx"
		],
		"ignoreBinaries": [],
		"ignoreDependencies": [
			"@testing-library/react",
			"@testing-library/user-event",
			"react-textarea-autosize",
			"eslint-plugin-tailwindcss"
		]
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"plugins": [
			"@trivago/prettier-plugin-sort-imports",
			"prettier-plugin-tailwindcss"
		],
		"importOrder": [
			"^react$",
			"^react-dom$",
			"^react-icons/(.*)$",
			"<THIRD_PARTY_MODULES>",
			"^@/spec/(.*)$",
			"^@/lib/(.*)$",
			"^@/hooks/(.*)$",
			"^@/apis/(.*)$",
			"^@/components/(.*)$",
			"^@/(.*)$",
			"^[./]"
		],
		"importOrderSeparation": true,
		"importOrderSortSpecifiers": true,
		"importOrderCaseInsensitive": true
	}
}
