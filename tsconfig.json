{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"outDir": "dist"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"exclude": ["node_modules", "dist"]
}
