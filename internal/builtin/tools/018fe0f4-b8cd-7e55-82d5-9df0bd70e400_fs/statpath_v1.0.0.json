	"slug": "statpath",
	"version": "v1.0.0",
	"displayName": "Inspect path",
	"description": "Return size, timestamps, and basic metadata for a file-system path without modifying it.",
	"tags": ["fs", "stat"],
	"userCallable": true,
	"llmCallable": true,
	"outputKind": "text",
	"argSchema": {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"type": "object",
		"properties": {
			"path": {
				"type": "string",
				"description": "Absolute or relative path to inspect."
			}
		},
		"required": ["path"],
		"additionalProperties": false
	},
	"outputSchema": {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"type": "object",
		"properties": {
			"exists": {
				"type": "boolean",
				"description": "Whether the path exists."
			},
			"isDir": {
				"type": "boolean",
				"description": "True if the path is a directory."
			},
			"sizeBytes": {
				"type": "integer",
				"description": "Size of the file in bytes (if applicable)."
			},
			"modTime": {
				"type": "string",
				"description": "Last modification time in RFC3339 format."
			}
		},
		"required": ["exists", "isDir"],
		"additionalProperties": false
	},
	"type": "go",
	"goImpl": {
